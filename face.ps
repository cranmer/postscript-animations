%!PS-Adobe-2.0 EPSF-2.0
%%BoundingBox: 0 -500 700 800
% Demonstrate shading and width in drawing lines and filling shapes
% Define an operator box which builds a path for a one inch square box
% Note that box does not draw or fill the box.
/ellipse {
%  moveto                                % Current point is on stack
    gsave
    translate	
  newpath
  gsave	
  scale                                 % set x-y scale for ellipse
  0 0 10 0 360 arc
%  closepath                             % Bottom
    stroke
  grestore
  grestore
} def

/mouth {
    gsave
   translate
   newpath
   scale
   0 0 10 180 0 arc
   stroke
   grestore
   grestore

} def

/face {
    gsave
    translate
    gsave
    headsquat 1 scale
    10 10 0 0 ellipse
    grestore
    gsave
    -30 30 translate
    eyeangle rotate
    eyesquint 1 0 0  ellipse
    grestore
    gsave
    30 30 translate
    -1 eyeangle mul rotate
    eyesquint 1 0 0 ellipse
    grestore
    5 smile 0 -40 mouth
    
    grestore
    0 200 translate
} def

